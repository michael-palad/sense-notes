<%= @page_title = "Login" %>

<div class="container devise-main">

  <%= render 'layouts/flash_messages' %>

<h2>Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),
      html: { class: "form-horizontal" }) do |f| %>
  <div class="field form-group">
    <%= f.label :email, class: "control-label col-sm-1", for: "user_email" %>
    <div class="col-sm-3">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: "control-label col-sm-1", for: "user_password" %>
    <div class="col-sm-3">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field form-group">
      <div class="col-sm-offset-1 col-sm-3">
        <div class="checkbox">
          <label for="user_remember_me">
            <%= f.check_box :remember_me %> Remember Me</label>
        </div>
      </div>
    </div>
  <% end -%>

  <div class="actions form-group">
    <div class="col-sm-offset-1 col-sm-6">
      <%= f.submit "Login", class: "btn btn-primary", 
          data: { disable_with: "Logging in..." }%>
    </div>
  </div>
<% end %>

</div> <!-- Container -->