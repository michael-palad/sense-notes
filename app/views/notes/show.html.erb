<div class="container notes-main">
  <h2><%= @note.title %></h2>
  <p><%= @note.content.html_safe %></p>
  <% if @note.category_id.nil? %>
    <p class="label label-primary">Uncategorized</p>
  <% else %>
    <p class="label label-primary"><%= @note.category.name %></p>
  <% end %>
  
  <div class="btn-actions">
    <%= link_to "Edit Note", edit_note_path(@note),
        class: "btn btn-success btn-lg btn-space" %>
    <%= link_to "Delete Note", note_path(@note), method: :delete,
        data: { confirm: "Are you sure you want to delete this note?" },
        class: "btn btn-primary btn-lg" %>
  </div>
</div>

